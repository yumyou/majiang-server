<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yanzu.module.member.dal.mysql.member.StoreWxpayConfigMapper">

    <!--
        一般情况下，尽可能使用 Mapper 进行 CRUD 增删改查即可。
        无法满足的场景，例如说多表关联查询，才使用 XML 编写 SQL。
        代码生成器暂时只生成 Mapper XML 文件本身，更多推荐 MybatisX 快速开发插件来生成查询。
        文档可见：https://www.iocoder.cn/MyBatis/x-plugins/
     -->

    <select id="getStoreWxpayConfigPage"
            resultType="com.yanzu.module.member.controller.admin.wxpay.vo.StoreWxpayConfigPageRespVO">
        select sw.*, s.store_name
        from member_store_wxpay_config sw
        left join member_store_info s ON sw.store_id = s.store_id
        where sw.deleted=0 and s.deleted=0
          <if test="null!=reqVO">
              <if test="null!=reqVO.storeId and reqVO.storeId!=''">
                  and sw.store_id=#{reqVO.storeId}
              </if>
              <if test="null!=reqVO.mchId and reqVO.mchId!=''">
                  and locate(#{reqVO.mchId},sw.mch_id)>0
              </if>
          </if>

    </select>
    <select id="getConfigByStoreId"
            resultType="com.yanzu.module.member.dal.dataobject.member.StoreWxpayConfigDO">
        select *
        from member_store_wxpay_config
        where deleted = 0
          and store_id = #{storeId}
    </select>
    <select id="getMiniappConfig" resultType="com.yanzu.module.member.service.wx.MiniappConfigVO">
        select miniapp_id, miniapp_secret
        from system_tenant
        where id = #{tenantId}
    </select>
</mapper>
